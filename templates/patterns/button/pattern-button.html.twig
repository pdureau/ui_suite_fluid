{% if variant != '' and variant|lower != 'default' %}
  {% set variants = variant|split('__') %}
  {% for variant in variants %}
    {% set attributes = attributes.addClass('nj-btn--' ~ variant|lower|replace({'_': '-'})) %}
  {% endfor %}
{% endif %}

{% if url or attributes.href %}
  {% set url = url ?: attributes.href %}
  <a{{ attributes.addClass('nj-btn').setAttribute('href', url) }}>{{ label }}</a>
{% else %}
  <button{{ attributes.addClass('nj-btn') }}>{{ label }}</button>
{% endif %}
